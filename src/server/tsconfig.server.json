{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "../../out-tsc/server",
    "removeComments": true,
    "target": "es6",
    "types": []
  },
  "include": [
    "src/server/*",
    "src/shared/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
